/* ========== Timeline (좌우 교차형) ========== */
/* 색 변경은 --tl-accent 로 (각 아이템은 style="--color:#..." 권장) */
:root { --tl-accent:#0ea5e9; --tl-line:#ccc; }

.timeline-section{font-family:'Noto Sans KR','Pretendard','Apple SD Gothic Neo','맑은 고딕',sans-serif;background:#f8fafc;padding:60px 20px;}
.timeline-title{text-align:center;font-size:1.8rem;font-weight:700;color:#003366;margin-bottom:50px;}
.timeline{position:relative;max-width:1000px;margin:0 auto;}
.timeline::after{content:'';position:absolute;top:0;bottom:0;left:50%;width:4px;margin-left:-2px;background:var(--tl-line);}

.timeline-item{position:relative;box-sizing:border-box;width:50%;padding:15px 30px;--color:var(--tl-accent);}
.timeline-item.left{left:0;}
.timeline-item.right{left:50%;}
.timeline-item::before{content:attr(data-icon);position:absolute;top:12px;left:50%;transform:translateX(-50%);font-size:1.2rem;color:var(--color);z-index:2;}
.timeline-item::after{content:'';position:absolute;top:18px;left:50%;transform:translateX(-50%);width:16px;height:16px;background:var(--color);border:4px solid #fff;border-radius:50%;z-index:1;}
.timeline-item .content{position:relative;background:#fff;border-radius:10px;box-shadow:0 4px 12px rgba(0,0,0,.05);padding:20px;}
.timeline-item.left .content{margin-right:30px;}
.timeline-item.right .content{margin-left:30px;}
.timeline-item h3{margin:0 0 10px;font-size:1.2rem;font-weight:700;color:var(--color);}
.timeline-item p{margin:0;color:#333;font-size:.95rem;line-height:1.7;}

@media (max-width:768px){
  .timeline::after{left:20px;}
  .timeline-item{width:100%;left:0;padding-left:60px;padding-right:20px;}
  .timeline-item.right{left:0;}
  .timeline-item::before,.timeline-item::after{left:20px;transform:none;}
  .timeline-item .content{margin:0 0 20px 20px;}
}

