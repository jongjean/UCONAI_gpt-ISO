# OpenAI API Key
OPENAI_API_KEY=your-openai-api-key-here

# Backend Server Port
PORT=3000

# Database URL (PostgreSQL - M2부터 사용)
# 예: postgres://ucon:password@postgres:5432/uconai_iso
DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DB_NAME

# NODE_ENV (development / production)
NODE_ENV=development

# Optional: JWT lifetimes & secrets
# ACCESS_EXPIRES=15m
# REFRESH_EXPIRES=7d
# JWT_SECRET=replace-with-strong-secret
# JWT_REFRESH_SECRET=replace-with-strong-refresh-secret

# Optional: TOTP tolerance window (number of 30s steps accepted on either side)
# TOTP_WINDOW=1
