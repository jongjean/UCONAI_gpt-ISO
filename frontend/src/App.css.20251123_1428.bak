.iso-sidebar-conv-toprow {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-end;
  gap: 4px;
  position: relative;
  min-height: 16px;
}
.iso-sidebar-conv-meta {
  position: static;
  z-index: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 11px;
  color: #9ca3af;
  margin-top: 0;
  margin-bottom: 2px;
}
.iso-sidebar-conv-title {
  position: relative;
  z-index: 1;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 13px;
  font-weight: 600;
  margin-bottom: 0;
}
