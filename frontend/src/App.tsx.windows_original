// src/App.tsx
import React, { useEffect, useState, FormEvent } from "react";

// === íƒ€ì… ì •ì˜ ===
interface Attachment {
  id: string;
  messageId: string;
  fileName: string;
  fileSize: number | null;
  mimeType: string | null;
  storageKey: string;
  createdAt: string;
  downloadUrl: string;
}

interface Message {
  id: string;
  conversationId: string;
  role: "USER" | "ASSISTANT" | "SYSTEM";
  content: string;
  createdAt: string;
  updatedAt: string;
  isEdited: boolean;
  isDeleted: boolean;
  attachments: Attachment[]; // ë°±ì—”ë“œì—ì„œ í•­ìƒ ë°°ì—´ë¡œ ë‚´ë ¤ì˜¤ë„ë¡ ë§ì¶°ë‘ 
}

interface Conversation {
  id: string;
  title: string;
  createdAt: string;
  updatedAt: string;
}

const API_BASE = "http://127.0.0.1:4400"; // ê°™ì€ ë„ë©”ì¸ì—ì„œ /api/ucon/... ë¡œ í”„ë¡ì‹œ/ë¦¬ë²„ìŠ¤í”„ë¡ì‹œëœë‹¤ê³  ê°€ì •

const App: React.FC = () => {
  const [conversations, setConversations] = useState<Conversation[]>([]);
  const [selectedConversation, setSelectedConversation] =
    useState<Conversation | null>(null);
  const [messages, setMessages] = useState<Message[]>([]);
  const [newMessage, setNewMessage] = useState("");
  const [loadingConvs, setLoadingConvs] = useState(false);
  const [loadingMessages, setLoadingMessages] = useState(false);
  const [sending, setSending] = useState(false);
  const [error, setError] = useState<string | null>(null);

  // === ê³µí†µ fetch í—¬í¼ ===
  async function apiGet<T>(path: string): Promise<T> {
    const res = await fetch(`${API_BASE}${path}`);
    if (!res.ok) {
      const text = await res.text();
      throw new Error(`GET ${path} failed: ${res.status} ${text}`);
    }
    return (await res.json()) as T;
  }

  async function apiPost<T>(path: string, body: unknown): Promise<T> {
    const res = await fetch(`${API_BASE}${path}`, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(body),
    });
    if (!res.ok) {
      const text = await res.text();
      throw new Error(`POST ${path} failed: ${res.status} ${text}`);
    }
    return (await res.json()) as T;
  }

  // === 1) ëŒ€í™”ë°© ëª©ë¡ ë¡œë”© ===
  const loadConversations = async () => {
    try {
      setLoadingConvs(true);
      setError(null);
      const data = await apiGet<Conversation[]>(
        "/api/ucon/iso/conversations"
      );
      setConversations(data);

      // ì•„ì§ ì„ íƒëœ ë°©ì´ ì—†ê³ , ëª©ë¡ì´ ìˆìœ¼ë©´ ì²« ë²ˆì§¸ ìë™ ì„ íƒ
      if (!selectedConversation && data.length > 0) {
        setSelectedConversation(data[0]);
      }
    } catch (e: any) {
      console.error(e);
      setError(e.message ?? "ëŒ€í™”ë°© ëª©ë¡ì„ ë¶ˆëŸ¬ì˜¤ëŠ” ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.");
    } finally {
      setLoadingConvs(false);
    }
  };

  // === 2) íŠ¹ì • ëŒ€í™”ë°©ì˜ ë©”ì‹œì§€ ëª©ë¡ ë¡œë”© ===
  const loadMessages = async (conversationId: string) => {
    try {
      setLoadingMessages(true);
      setError(null);
      const data = await apiGet<Message[]>(
        `/api/ucon/iso/messages?conversationId=${conversationId}`
      );
      setMessages(data);
    } catch (e: any) {
      console.error(e);
      setError(e.message ?? "ë©”ì‹œì§€ë¥¼ ë¶ˆëŸ¬ì˜¤ëŠ” ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.");
    } finally {
      setLoadingMessages(false);
    }
  };

  // ì²« ë§ˆìš´íŠ¸ ì‹œ ëŒ€í™”ë°© ëª©ë¡ ë¡œë”©
  useEffect(() => {
    loadConversations().catch(console.error);
  }, []);

  // ì„ íƒëœ ëŒ€í™”ë°©ì´ ë°”ë€” ë•Œë§ˆë‹¤ ë©”ì‹œì§€ ë¡œë”©
  useEffect(() => {
    if (selectedConversation) {
      loadMessages(selectedConversation.id).catch(console.error);
    } else {
      setMessages([]);
    }
  }, [selectedConversation?.id]);

  // === ìƒˆ ëŒ€í™”ë°© ìƒì„± ===
  const handleCreateConversation = async () => {
    const title = window.prompt("ìƒˆ ëŒ€í™”ë°© ì œëª©ì„ ì…ë ¥í•˜ì„¸ìš”:", "ìƒˆ ISO ëŒ€í™”ë°©");
    if (!title) return;

    try {
      setError(null);
      const created = await apiPost<Conversation>(
        "/api/ucon/iso/conversations",
        { title }
      );
      // ëª©ë¡ì— ì¶”ê°€
      const next = [created, ...conversations];
      setConversations(next);
      setSelectedConversation(created);
    } catch (e: any) {
      console.error(e);
      setError(e.message ?? "ëŒ€í™”ë°© ìƒì„± ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.");
    }
  };

  // === ë©”ì‹œì§€ ì „ì†¡ ===
  const handleSendMessage = async (e: FormEvent) => {
    e.preventDefault();
    if (!selectedConversation) {
      window.alert("ë¨¼ì € ëŒ€í™”ë°©ì„ ì„ íƒí•˜ì„¸ìš”.");
      return;
    }
    if (!newMessage.trim()) return;

    try {
      setSending(true);
      setError(null);

      const created = await apiPost<Message>("/api/ucon/iso/messages", {
        conversationId: selectedConversation.id,
        role: "USER",
        content: newMessage.trim(),
      });

      setNewMessage("");
      // ë‹¨ìˆœíˆ ì•ì— ì¶”ê°€í•˜ê¸°ë³´ë‹¤, ì „ì²´ë¥¼ ë‹¤ì‹œ ë¡œë”©í•´ë„ ë¨
      // setMessages((prev) => [...prev, created]);
      await loadMessages(selectedConversation.id);
    } catch (e: any) {
      console.error(e);
      setError(e.message ?? "ë©”ì‹œì§€ ì „ì†¡ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.");
    } finally {
      setSending(false);
    }
  };

  return (
    <div className="min-h-screen bg-slate-900 text-slate-100 flex">
      {/* === ì™¼ìª½: ëŒ€í™”ë°© ë¦¬ìŠ¤íŠ¸ === */}
      <aside className="w-64 border-r border-slate-700 flex flex-col">
        <div className="p-4 border-b border-slate-700 flex items-center justify-between">
          <div>
            <div className="text-xs text-slate-400">UCONAI / ISO</div>
            <div className="font-bold text-lg">ëŒ€í™”ë°© ëª©ë¡</div>
          </div>
          <button
            onClick={handleCreateConversation}
            className="text-xs px-2 py-1 bg-emerald-500 hover:bg-emerald-400 text-slate-900 rounded"
          >
            + ìƒˆ ë°©
          </button>
        </div>

        <div className="flex-1 overflow-y-auto">
          {loadingConvs && (
            <div className="p-4 text-sm text-slate-400">ëŒ€í™”ë°© ë¶ˆëŸ¬ì˜¤ëŠ” ì¤‘â€¦</div>
          )}
          {!loadingConvs && conversations.length === 0 && (
            <div className="p-4 text-sm text-slate-400">
              ì•„ì§ ëŒ€í™”ë°©ì´ ì—†ìŠµë‹ˆë‹¤.
              <br />
              [+ ìƒˆ ë°©] ë²„íŠ¼ìœ¼ë¡œ í•˜ë‚˜ ìƒì„±í•´ ë³´ì„¸ìš”.
            </div>
          )}
          {!loadingConvs &&
            conversations.map((conv) => (
              <button
                key={conv.id}
                onClick={() => setSelectedConversation(conv)}
                className={`w-full text-left px-4 py-3 text-sm border-b border-slate-800 hover:bg-slate-800 ${
                  selectedConversation?.id === conv.id
                    ? "bg-slate-800 font-semibold"
                    : ""
                }`}
              >
                <div className="truncate">{conv.title}</div>
                <div className="text-[10px] text-slate-500 mt-1">
                  {new Date(conv.createdAt).toLocaleString()}
                </div>
              </button>
            ))}
        </div>
      </aside>

      {/* === ì˜¤ë¥¸ìª½: ë©”ì‹œì§€ ì˜ì—­ === */}
      <main className="flex-1 flex flex-col">
        {/* ìƒë‹¨ í—¤ë” */}
        <header className="border-b border-slate-700 px-6 py-4 flex items-center justify-between">
          <div>
            <div className="text-xs text-slate-400">UCONAI / ISO ì—”ì§„</div>
            <div className="font-bold text-xl">
              {selectedConversation
                ? selectedConversation.title
                : "ëŒ€í™”ë°©ì„ ì„ íƒí•˜ì„¸ìš”"}
            </div>
          </div>
          <div className="text-xs text-slate-400">
            ì„œë²„: <span className="text-emerald-400">/api/ucon/iso/â€¦</span>
          </div>
        </header>

        {/* ì˜¤ë¥˜ ì¶œë ¥ */}
        {error && (
          <div className="px-6 py-2 text-sm text-red-400 bg-red-950/40 border-b border-red-800">
            ì˜¤ë¥˜: {error}
          </div>
        )}

        {/* ë©”ì‹œì§€ ëª©ë¡ */}
        <div className="flex-1 overflow-y-auto px-6 py-4 space-y-4">
          {loadingMessages && selectedConversation && (
            <div className="text-sm text-slate-400">
              ë©”ì‹œì§€ë¥¼ ë¶ˆëŸ¬ì˜¤ëŠ” ì¤‘ì…ë‹ˆë‹¤â€¦
            </div>
          )}

          {!loadingMessages &&
            selectedConversation &&
            messages.length === 0 && (
              <div className="text-sm text-slate-400">
                ì•„ì§ ë©”ì‹œì§€ê°€ ì—†ìŠµë‹ˆë‹¤. ì•„ë˜ ì…ë ¥ì°½ì—ì„œ ì²« ë©”ì‹œì§€ë¥¼ ë³´ë‚´ë³´ì„¸ìš”.
              </div>
            )}

          {!selectedConversation && (
            <div className="text-sm text-slate-400">
              ì™¼ìª½ì—ì„œ ëŒ€í™”ë°©ì„ ì„ íƒí•˜ê±°ë‚˜ ìƒˆë¡œ ìƒì„±í•´ ì£¼ì„¸ìš”.
            </div>
          )}

          {!loadingMessages &&
            selectedConversation &&
            messages.map((msg) => (
              <div
                key={msg.id}
                className={`max-w-3xl ${
                  msg.role === "USER" ? "ml-auto text-right" : "mr-auto text-left"
                }`}
              >
                <div
                  className={`inline-block rounded-lg px-4 py-2 text-sm whitespace-pre-wrap ${
                    msg.role === "USER"
                      ? "bg-emerald-500 text-slate-900"
                      : "bg-slate-800 text-slate-100"
                  }`}
                >
                  {msg.content}
                </div>
                <div className="text-[10px] text-slate-500 mt-1">
                  {msg.role} Â· {new Date(msg.createdAt).toLocaleString()}
                </div>

                {/* ì²¨ë¶€íŒŒì¼ ë¦¬ìŠ¤íŠ¸ (ì´ë¯¸ ë°±ì—”ë“œì—ì„œ downloadUrl í¬í•¨) */}
                {msg.attachments && msg.attachments.length > 0 && (
                  <div className="mt-1 border-l-4 border-blue-400 pl-3 text-xs text-left">
                    {msg.attachments.map((att) => (
                      <div key={att.id} className="mt-1">
                        <a
                          href={att.downloadUrl}
                          target="_blank"
                          rel="noopener noreferrer"
                          className="text-blue-400 underline hover:text-blue-200"
                        >
                          ğŸ“ {att.fileName}{" "}
                          {att.fileSize != null ? `(${att.fileSize} bytes)` : ""}
                        </a>
                      </div>
                    ))}
                  </div>
                )}
              </div>
            ))}
        </div>

        {/* ë©”ì‹œì§€ ì…ë ¥ ë°” */}
        <form
          onSubmit={handleSendMessage}
          className="border-t border-slate-700 px-6 py-3 flex items-center gap-3"
        >
          <textarea
            className="flex-1 bg-slate-900 border border-slate-700 rounded-md px-3 py-2 text-sm resize-none focus:outline-none focus:ring-2 focus:ring-emerald-500"
            rows={2}
            placeholder={
              selectedConversation
                ? "ì—¬ê¸°ì— ë©”ì‹œì§€ë¥¼ ì…ë ¥í•˜ê³  Enterë¡œ ì „ì†¡ (Shift+Enter ì¤„ë°”ê¿ˆ)â€¦"
                : "ë¨¼ì € ì™¼ìª½ì—ì„œ ëŒ€í™”ë°©ì„ ì„ íƒí•˜ê±°ë‚˜ ìƒì„±í•´ ì£¼ì„¸ìš”."
            }
            value={newMessage}
            onChange={(e) => setNewMessage(e.target.value)}
            disabled={!selectedConversation || sending}
            onKeyDown={(e) => {
              if (e.key === "Enter" && !e.shiftKey) {
                e.preventDefault();
                if (!sending) {
                  handleSendMessage(e as any);
                }
              }
            }}
          />
          <button
            type="submit"
            disabled={!selectedConversation || sending || !newMessage.trim()}
            className="px-4 py-2 bg-emerald-500 hover:bg-emerald-400 disabled:bg-slate-600 text-slate-900 text-sm font-semibold rounded-md"
          >
            {sending ? "ì „ì†¡ ì¤‘â€¦" : "ì „ì†¡"}
          </button>
        </form>
      </main>
    </div>
  );
};

export default App;
