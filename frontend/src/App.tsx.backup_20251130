import { useEffect, useState } from "react";

const API_BASE =
  import.meta.env.VITE_API_BASE_URL ?? "http://127.0.0.1:4400";

// ==== íƒ€ì… ì •ì˜ ====
interface Attachment {
  id: string | number;
  filename: string;
  downloadUrl: string;
}

interface Message {
  id: string | number;
  role: "user" | "assistant" | "system";
  content: string;
  createdAt: string;
  attachments?: Attachment[];
}

interface Conversation {
  id: string | number;
  title: string;
  createdAt: string;
}

// presign-upload ì‘ë‹µ í˜•íƒœ (ë°±ì—”ë“œ êµ¬í˜„ì— ë§ê²Œ í•„ë“œëª…ë§Œ ì¡°ì •í•˜ë©´ ë¨)
interface PresignUploadResponse {
  uploadUrl: string;
  storageKey: string;
  messageId: string | number; // presign ì‹œ ìƒì„±ëœ messageId
}

// ==== API í•¨ìˆ˜ ====

// ëŒ€í™”ë°© ëª©ë¡
async function fetchConversations(): Promise<Conversation[]> {
  const res = await fetch(`${API_BASE}/api/ucon/iso/conversations`);
  if (!res.ok) throw new Error("Failed to load conversations");
  const data = await res.json();
  // curl ê²°ê³¼ê°€ ë°”ë¡œ ë°°ì—´ì´ë¯€ë¡œ ë°°ì—´ ìš°ì„  ì²˜ë¦¬
  return Array.isArray(data) ? data : data.items ?? [];
}

// ë©”ì‹œì§€ ëª©ë¡
async function fetchMessages(
  conversationId: string | number
): Promise<Message[]> {
  const url = new URL(`${API_BASE}/api/ucon/iso/messages`);
  url.searchParams.set("conversationId", String(conversationId));

  const res = await fetch(url.toString());
  if (!res.ok) throw new Error("Failed to load messages");
  const data = await res.json();
  return Array.isArray(data) ? data : data.items ?? [];
}

// í…ìŠ¤íŠ¸ ë©”ì‹œì§€ ì „ì†¡
async function sendMessage(params: {
  conversationId: string | number;
  content: string;
}): Promise<Message> {
  const res = await fetch(`${API_BASE}/api/ucon/iso/messages`, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify(params),
  });
  if (!res.ok) throw new Error("Failed to send message");
  return res.json();
}

// íŒŒì¼ presign ìš”ì²­
async function presignUploadForMessage(params: {
  conversationId: string | number;
  filename: string;
  size: number;
  mimeType: string;
}): Promise<PresignUploadResponse> {
  // â€» ë°±ì—”ë“œ êµ¬í˜„ì— ë§ê²Œ body í•„ë“œëª…ë§Œ ë§ì¶°ì£¼ë©´ ë©ë‹ˆë‹¤.
  // ì˜ˆ: engine: "iso", type: "message", conversationId + íŒŒì¼ ë©”íƒ€ ì •ë³´
  const res = await fetch(`${API_BASE}/api/ucon/files/presign-upload`, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({
      engine: "iso",
      type: "message",
      conversationId: params.conversationId,
      filename: params.filename,
      size: params.size,
      mimeType: params.mimeType,
    }),
  });

  if (!res.ok) throw new Error("Failed to presign upload");
  return res.json();
}

// íŒŒì¼ commit ìš”ì²­
async function commitUploadedFile(params: {
  messageId: string | number;
  filename: string;
  storageKey: string;
  size: number;
}) {
  // ì—¬ê¸°ë„ ë°±ì—”ë“œ ìŠ¤í™ì— ë§ê²Œ í•„ë“œë§Œ ì¡°ì •
  // (curl ì˜ˆì‹œ: engine / type / ownerId / originalFilename / storageKey / size ...)
  const res = await fetch(`${API_BASE}/api/ucon/files/commit`, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({
      engine: "iso",
      type: "message",
      ownerId: params.messageId,
      originalFilename: params.filename,
      storageKey: params.storageKey,
      size: params.size,
    }),
  });

  if (!res.ok) throw new Error("Failed to commit uploaded file");
  return res.json();
}

// ==== ë©”ì¸ ì»´í¬ë„ŒíŠ¸ ====
function App() {
  const [conversations, setConversations] = useState<Conversation[]>([]);
  const [selectedConvId, setSelectedConvId] = useState<
    string | number | null
  >(null);
  const [messages, setMessages] = useState<Message[]>([]);
  const [loadingConvs, setLoadingConvs] = useState(false);
  const [loadingMessages, setLoadingMessages] = useState(false);
  const [newMessage, setNewMessage] = useState("");
  const [sending, setSending] = useState(false);

  // íŒŒì¼ ì—…ë¡œë“œ ìƒíƒœ
  const [uploading, setUploading] = useState(false);
  const [uploadFileName, setUploadFileName] = useState<string | null>(null);

  // ì´ˆê¸° ëŒ€í™”ë°© ë¡œë”©
  useEffect(() => {
    const loadConversations = async () => {
      try {
        setLoadingConvs(true);
        const list = await fetchConversations();
        setConversations(list);
        if (list.length > 0) {
          setSelectedConvId(list[0].id);
        }
      } catch (err) {
        console.error("Failed to load conversations", err);
      } finally {
        setLoadingConvs(false);
      }
    };

    loadConversations();
  }, []);

  // ëŒ€í™”ë°© ì„ íƒ ì‹œ ë©”ì‹œì§€ ë¡œë”©
  useEffect(() => {
    if (!selectedConvId) return;

    const loadMessages = async () => {
      try {
        setLoadingMessages(true);
        const list = await fetchMessages(selectedConvId);
        setMessages(list);
      } catch (err) {
        console.error("Failed to load messages", err);
      } finally {
        setLoadingMessages(false);
      }
    };

    loadMessages();
  }, [selectedConvId]);

  const handleSend = async () => {
    if (!selectedConvId || !newMessage.trim()) return;
    try {
      setSending(true);
      const msg = await sendMessage({
        conversationId: selectedConvId,
        content: newMessage.trim(),
      });
      setMessages((prev) => [...prev, msg]);
      setNewMessage("");
    } catch (err) {
      console.error("Failed to send message", err);
    } finally {
      setSending(false);
    }
  };

  // íŒŒì¼ ì„ íƒ í•¸ë“¤ëŸ¬
  const handleFileChange = async (
    e: React.ChangeEvent<HTMLInputElement>
  ) => {
    const file = e.target.files?.[0];
    // ê°™ì€ inputìœ¼ë¡œ ë‘ ë²ˆ ì—°ì† ì—…ë¡œë“œí•  ìˆ˜ ìˆê²Œ value ì´ˆê¸°í™”
    e.target.value = "";

    if (!file) return;
    if (!selectedConvId) {
      alert("ë¨¼ì € ëŒ€í™”ë°©ì„ ì„ íƒí•´ ì£¼ì„¸ìš”.");
      return;
    }

    try {
      setUploading(true);
      setUploadFileName(file.name);

      // 1) presign ìš”ì²­ â†’ uploadUrl / storageKey / messageId ë°›ê¸°
      const presign = await presignUploadForMessage({
        conversationId: selectedConvId,
        filename: file.name,
        size: file.size,
        mimeType: file.type || "application/octet-stream",
      });

      // 2) MinIOë¡œ ì‹¤ì œ íŒŒì¼ PUT ì—…ë¡œë“œ
      await fetch(presign.uploadUrl, {
        method: "PUT",
        body: file,
        headers: {
          "Content-Type": file.type || "application/octet-stream",
        },
      });

      // 3) commit í˜¸ì¶œ â†’ DB MessageAttachment ìƒì„±
      await commitUploadedFile({
        messageId: presign.messageId,
        filename: file.name,
        storageKey: presign.storageKey,
        size: file.size,
      });

      // 4) ì—…ë¡œë“œ ë°˜ì˜ëœ ë©”ì‹œì§€ ëª©ë¡ ë‹¤ì‹œ ë¶ˆëŸ¬ì˜¤ê¸°
      const updated = await fetchMessages(selectedConvId);
      setMessages(updated);
    } catch (err) {
      console.error("FILE UPLOAD ERROR", err);
      alert("íŒŒì¼ ì—…ë¡œë“œ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤. ì½˜ì†” ë¡œê·¸ë¥¼ í™•ì¸í•˜ì„¸ìš”.");
    } finally {
      setUploading(false);
      setUploadFileName(null);
    }
  };

  return (
    <div className="h-screen bg-slate-950 text-slate-100 flex">
      {/* ì™¼ìª½: Conversation ë¦¬ìŠ¤íŠ¸ */}
      <aside className="w-64 border-r border-slate-800 flex flex-col">
        <div className="p-3 border-b border-slate-800 text-sm font-semibold">
          ISO Conversations
        </div>
        <div className="flex-1 overflow-y-auto">
          {loadingConvs ? (
            <div className="p-3 text-xs text-slate-400">Loading...</div>
          ) : conversations.length === 0 ? (
            <div className="p-3 text-xs text-slate-500">
              No conversations yet.
            </div>
          ) : (
            conversations.map((c) => (
              <button
                key={c.id}
                onClick={() => setSelectedConvId(c.id)}
                className={[
                  "w-full text-left px-3 py-2 text-xs border-b border-slate-900 hover:bg-slate-900/60",
                  selectedConvId === c.id ? "bg-slate-900" : "",
                ].join(" ")}
              >
                <div className="font-medium truncate">{c.title}</div>
                <div className="text-[10px] text-slate-500">
                  {new Date(c.createdAt).toLocaleString()}
                </div>
              </button>
            ))
          )}
        </div>
      </aside>

      {/* ê°€ìš´ë°: Chat ì˜ì—­ */}
      <main className="flex-1 flex flex-col">
        <div className="p-3 border-b border-slate-800 text-sm font-semibold flex items-center justify-between">
          <span>ISO Chat</span>
          {selectedConvId && (
            <span className="text-[11px] text-slate-500">
              Conversation ID: {String(selectedConvId)}
            </span>
          )}
        </div>

        {/* ë©”ì‹œì§€ ë¦¬ìŠ¤íŠ¸ */}
        <div className="flex-1 overflow-y-auto p-4 space-y-3 text-sm">
          {loadingMessages ? (
            <div className="text-xs text-slate-400">Loading messages...</div>
          ) : messages.length === 0 ? (
            <div className="text-xs text-slate-500">
              No messages. Start the conversation.
            </div>
          ) : (
            messages.map((m) => (
              <div key={m.id} className="space-y-1">
                <div className="text-[11px] text-slate-500">
                  {m.role.toUpperCase()} Â·{" "}
                  {new Date(m.createdAt).toLocaleTimeString()}
                </div>
                <div
                  className={[
                    "inline-block px-3 py-2 rounded-lg text-sm whitespace-pre-wrap",
                    m.role === "user"
                      ? "bg-sky-600/80"
                      : "bg-slate-800/80 border border-slate-700",
                  ].join(" ")}
                >
                  {m.content}
                </div>
                {m.attachments && m.attachments.length > 0 && (
                  <div className="mt-1 flex flex-wrap gap-2 text-[11px]">
                    {m.attachments.map((a) => (
                      <a
                        key={a.id}
                        href={a.downloadUrl}
                        target="_blank"
                        rel="noreferrer"
                        className="px-2 py-1 border border-slate-600 rounded-full hover:bg-slate-800"
                      >
                        ğŸ“ {a.filename}
                      </a>
                    ))}
                  </div>
                )}
              </div>
            ))
          )}
        </div>

        {/* ë©”ì‹œì§€ ì…ë ¥ + íŒŒì¼ ì—…ë¡œë“œ ë°” */}
        <div className="border-t border-slate-800 p-3 space-y-2">
          {/* íŒŒì¼ ì—…ë¡œë“œ ì˜ì—­ */}
          <div className="flex items-center justify-between gap-3 text-[11px]">
            <div className="flex items-center gap-2">
              <label className="inline-flex items-center gap-2 px-2 py-1 border border-slate-700 rounded-md text-xs cursor-pointer hover:bg-slate-900">
                <span>{uploading ? "ì—…ë¡œë“œ ì¤‘..." : "ğŸ“ íŒŒì¼ ì„ íƒ"}</span>
                <input
                  type="file"
                  className="hidden"
                  onChange={handleFileChange}
                  disabled={uploading || !selectedConvId}
                />
              </label>
              {uploadFileName && (
                <span className="text-slate-400 truncate max-w-[180px]">
                  {uploadFileName}
                </span>
              )}
            </div>
            <div className="text-slate-500">
              ì„ íƒí•œ íŒŒì¼ì€ presign â†’ PUT â†’ commit í›„ ë©”ì‹œì§€ì— ìë™ ë°˜ì˜ë©ë‹ˆë‹¤.
            </div>
          </div>

          {/* í…ìŠ¤íŠ¸ ì…ë ¥ */}
          <div className="flex gap-2">
            <textarea
              className="flex-1 text-xs bg-slate-900 border border-slate-700 rounded-md px-2 py-1 resize-none h-16 focus:outline-none focus:ring-1 focus:ring-sky-500"
              placeholder="ë©”ì‹œì§€ë¥¼ ì…ë ¥í•˜ì„¸ìš”..."
              value={newMessage}
              onChange={(e) => setNewMessage(e.target.value)}
            />
            <button
              onClick={handleSend}
              disabled={sending || !newMessage.trim() || !selectedConvId}
              className="w-24 text-xs font-semibold bg-sky-600 hover:bg-sky-500 disabled:bg-slate-700 disabled:cursor-not-allowed rounded-md"
            >
              {sending ? "Sending..." : "Send"}
            </button>
          </div>
        </div>
      </main>

      {/* ì˜¤ë¥¸ìª½: Guide ì˜ì—­ (í–¥í›„ í™•ì¥) */}
      <aside className="w-72 border-l border-slate-800 flex flex-col">
        <div className="p-3 border-b border-slate-800 text-sm font-semibold">
          Guides
        </div>
        <div className="flex-1 p-3 text-xs text-slate-400">
          - GLOBAL / CONVERSATION ë‹¨ìœ„ ì§€ì¹¨ ëª©ë¡  
          - ê° ì§€ì¹¨ì— ì²¨ë¶€íŒŒì¼ í‘œì‹œ  
          - ISO PWI 26255 ê³µí†µ ì§€ì¹¨ ë“± í‘œì‹œ ì˜ˆì •
        </div>
      </aside>
    </div>
  );
}

export default App;
