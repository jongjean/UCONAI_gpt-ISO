/* 백업본 - App.css (2025-11-22) */

:root {
	font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
		sans-serif;
	color: #111827;
	background-color: #0f172a;
}

body {
	margin: 0;
	padding: 0;
}

.iso-app-root {
  display: flex;
  min-height: 100vh;
  background: radial-gradient(circle at top left, #f5f3ff 0, #e5e7eb 40%, #e5e7eb 100%);
}

/* ====== Sidebar ====== */

.iso-sidebar {
  width: 260px;
  background: #020617;
  color: #e5e7eb;
  padding: 20px 18px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.iso-sidebar-header {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.iso-sidebar-title {
  font-size: 16px;
  font-weight: 700;
}

.iso-sidebar-sub {
  font-size: 12px;
  color: #9ca3af;
  line-height: 1.4;
}

.iso-sidebar-new-btn {
  margin-top: 8px;
  width: 100%;
  border: none;
  border-radius: 999px;
  padding: 8px 10px;
  font-size: 13px;
  font-weight: 600;
  cursor: pointer;
  background: linear-gradient(90deg, #8b5cf6, #ec4899);
  color: white;
}

.iso-sidebar-new-btn:hover {
  opacity: 0.9;
}

.iso-sidebar-section {
  font-size: 13px;
}

.iso-sidebar-section-title {
  font-weight: 600;
  margin-bottom: 6px;
}

.iso-sidebar-conv-list {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.iso-sidebar-conv-item {
  border-radius: 10px;
  padding: 8px 10px;
  background: #020617;
  border: 1px solid transparent;
  cursor: pointer;
}

.iso-sidebar-conv-item.active {
  background: #111827;
  border-color: #6366f1;
}

.iso-sidebar-conv-title {
  font-size: 13px;
  font-weight: 600;
}

.iso-sidebar-conv-meta {
  font-size: 11px;
  color: #9ca3af;
  margin-top: 2px;
}

.iso-sidebar-section.guides {
  margin-top: auto;
  font-size: 12px;
}

.iso-sidebar-guides-desc {
  margin-top: 6px;
  color: #9ca3af;
  line-height: 1.4;
}

/* ====== Main ====== */

.iso-main {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  padding: 0 24px 20px 24px;
  box-sizing: border-box;
  background: #fff;
  min-height: 100vh;
}

.iso-main-card {
  width: 100%;
  max-width: 900px;
  min-width: 320px;
  background: #fff;
  border-radius: 24px;
  box-shadow: 0 24px 60px rgba(15, 23, 42, 0.25);
  padding: 24px 24px 20px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 14px;
  margin-top: 0;
  margin-bottom: 0;
  min-height: calc(100vh - 20px);
  max-height: calc(100vh - 20px);
  justify-content: flex-start;
  position: relative;
}

.iso-main-card-header {
  text-align: left;
}

.iso-main-title {
  font-size: 22px;
  font-weight: 800;
  margin: 0;
}

.iso-main-subtitle {
  font-size: 12px;
  color: #6b7280;
  margin-top: 4px;
}

/* 모델/실행 방식 */

.iso-main-controls {
  display: flex;
  gap: 10px;
}

.iso-main-control {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.iso-label {
  font-size: 11px;
  font-weight: 600;
  color: #6b7280;
}

.iso-main-control select {
  border-radius: 999px;
  border: 1px solid #e5e7eb;
  padding: 6px 10px;
  font-size: 13px;
  outline: none;
}

.iso-main-control select:focus {
  border-color: #8b5cf6;
  box-shadow: 0 0 0 1px rgba(139, 92, 246, 0.3);
}

.iso-main-description {
  font-size: 11px;
  color: #6b7280;
}

/* 대화 영역 */

.iso-main-chat {
  flex: 1 1 auto;
  min-height: 120px;
  border-radius: 16px;
  border: 1px solid #e5e7eb;
  padding: 10px 12px;
  overflow-y: auto;
  background: #f9fafb;
  margin-bottom: 80px;
}

.iso-chat-empty {
  font-size: 13px;
  color: #9ca3af;
}

.iso-chat-messages {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.iso-chat-bubble {
  max-width: 100%;
  padding: 8px 10px;
  border-radius: 12px;
  font-size: 13px;
  line-height: 1.5;
  white-space: pre-wrap;
}

.iso-chat-bubble.user {
  align-self: flex-end;
  background: #eef2ff;
}

.iso-chat-bubble.ai {
  align-self: flex-start;
  background: #f3f4f6;
}

.iso-chat-bubble-role {
  font-size: 11px;
  font-weight: 600;
  margin-bottom: 2px;
  color: #6b7280;
}

.iso-chat-bubble-content {
  font-size: 13px;
}

/* 에러 */

.iso-error {
  font-size: 11px;
  color: #b91c1c;
  background: #fee2e2;
  border-radius: 8px;
  padding: 6px 8px;
}

/* 입력 폼 */


.iso-input-form {
  position: absolute;
  left: 24px;
  right: 24px;
  bottom: 20px;
  background: #fff;
  display: flex;
  flex-direction: column;
  gap: 8px;
  z-index: 10;
  box-shadow: 0 2px 12px rgba(0,0,0,0.04);
  border-radius: 16px;
  padding: 12px 16px 12px 16px;
}

.iso-textarea {
  width: 100%;
  min-height: 80px;
  resize: vertical;
  padding: 8px 10px;
  border-radius: 12px;
  border: 1px solid #e5e7eb;
  font-size: 13px;
  box-sizing: border-box;
  outline: none;
}

.iso-textarea:focus {
  border-color: #a855f7;
  box-shadow: 0 0 0 1px rgba(168, 85, 247, 0.25);
}

.iso-submit-btn {
  width: 100%;
  border-radius: 999px;
  border: none;
  padding: 8px 10px;
  font-size: 13px;
  font-weight: 600;
  cursor: pointer;
  background: #5b21b6;
  color: #fff;
  opacity: 1 !important;
}

.iso-submit-btn:hover:not(:disabled) {
  background: #4c1d95;
  color: #fff;
  opacity: 1 !important;
}

.iso-submit-btn:disabled {
  background: #5b21b6;
  color: #fff;
  opacity: 1 !important;
  cursor: default;
}
